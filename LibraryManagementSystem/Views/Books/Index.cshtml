@model IEnumerable<LibraryManagementSystem.Models.Book>

<h2>Kitap Listesi</h2>

<p>
    <a asp-action="Create">Yeni Kitap Ekle</a>
</p>

<table border="1">
    <tr>
        <th>Başlık</th>
        <th>Yazar</th>
        <th>Yıl</th>
        <th>İşlemler</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Title</td>
            <td>@item.Author</td>
            <td>@item.PublishYear</td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id">Detay</a> |
                <a asp-action="Edit" asp-route-id="@item.Id">Düzenle</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Sil</a>
            </td>
        </tr>
    }
</table>
